@model Model.EF.Product

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_layoutC.cshtml";
    var url = "/chi-tiet/" + Model.MetaTitle + "-" + Model.ID;
    var list = (List<Model.EF.Product>)ViewBag.ListReatedProducts;

}
<div class="content">
    <div class="content_top">
        <div class="back-links">
            <p><a href="index.html">Home</a> >>>> <a href="#">Electronics</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        <div class="cont-desc span_1_of_2">
            <div class="product-details">
                <div class="grid images_3_of_2">
                    <div id="container">
                        <div id="products_example">
                            <div id="products">
                                <div class="slides_container">
                                    <a href="#" target="_blank"><img src="@Model.Image" style="width:304px;height:274px" alt=" " /></a>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="desc span_3_of_2">
                    <h2>@Model.Name </h2>
                    <b>Mã sản phẩm: @Model.Code</b><br />
                    <b>Mô tả sản phẩm:</b>
                    <p>@Model.Description.</p>
                    <b>Số lượng còn lại: @Model.Quantity</b><br />
                    <b>Bảo hành: @Model.Warranty (Tháng)</b>
                    <div class="price">
                        <p>Price: <span>@Model.Price</span></p>
                    </div>
                    <div class="available">
                        <p>Tùy chọn :</p>
                        <ul>
                            <li>
                                Color:
                                <select>
                                    <option>Silver</option>
                                    <option>Black</option>
                                    <option>Dark Black</option>
                                    <option>Red</option>
                                </select>
                            </li>
                        </ul>
                    </div>
                    <div class="share-desc">
                        <div class="share">
                            <p>Chia sẻ sản phẩm :</p>
                            <ul>
                                <li><a href="#"><img src="/Areas/Client/images/facebook.png" alt="" /></a></li>
                                <li><a href="#"><img src="/Areas/Client/images/twitter.png" alt="" /></a></li>
                            </ul>
                        </div>
                        <div class="button"><span><a href="#">Thêm vào giỏ</a></span></div>
                        <div class="clear"></div>
                    </div>
                    <div class="wish-list">
                        <ul>
                            <li class="wish"><a href="#">Thêm vào danh sách yêu thích</a></li>
                            <li class="compare"><a href="#">So sánh</a></li>
                        </ul>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="product_desc">
                <div id="horizontalTab">
                    <ul class="resp-tabs-list">
                        <li>Chi tiết sản phẩm</li>
                        <li>Tags sản phẩm</li>
                        <li>Phản hồi khách hàng</li>
                        <div class="clear"></div>
                    </ul>
                    <div class="resp-tabs-container">
                        <div class="product-desc">
                            <p>@Model.Detail</p>
                        </div>
                        <div class="product-tags">
                            <h4>Add Your Tags:</h4>
                            <div class="input-box">
                                <input type="text" value="">
                            </div>
                            <div class="button"><span><a href="#">Add Tags</a></span></div>
                        </div>
                        <div class="review">
                            
                            <ul>
                                <li>Price :<a href="#"><img src="/Areas/Client/images/price-rating.png" alt="" /></a></li>
                                <li>Value :<a href="#"><img src="/Areas/Client/images/value-rating.png" alt="" /></a></li>
                                <li>Quality :<a href="#"><img src="/Areas/Client/images/quality-rating.png" alt="" /></a></li>
                            </ul>

                            <div class="your-review">
                                <h3>Bạn đánh giá sản phẩm bao nhiêu sao?</h3>
                                <p>Viết trên chính cảm nhận của bạn</p>
                                <form>
                                    <div>
                                        <span><label>Họ tên<span class="red">*</span></label></span>
                                        <span><input type="text" value=""></span>
                                    </div>
                                    <div>
                                        <span><label>Tóm tắt đánh giá<span class="red">*</span></label></span>
                                        <span><input type="text" value=""></span>
                                    </div>
                                    <div>
                                        <span><label>Đánh giá<span class="red">*</span></label></span>
                                        <span><textarea> </textarea></span>
                                    </div>
                                    <div>
                                        <span><input type="submit" value="Gửi đánh giá"></span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content_bottom">
                <div class="heading">
                    <h3>Sản phẩm liên quan</h3>>
                </div>
                <div class="see">
                    <p><a href="#">See all Products</a></p>
                </div>
                <div class="clear"></div>
            </div>
            <div class="section group">
                @if (list != null)
                {
    
                    foreach (var item in list)
                    {
                        var @urlimg = "/chi-tiet/" + item.MetaTitle + "-" + @item.ID;
                <div class="grid_1_of_3 images_1_of_3">
                    <a href="@urlimg"><img src="@item.Image" style="width:212px; height:210px" alt=""></a>
                    <h2>@item.Name</h2>
                   <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="preview.html">Thêm vào giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                    </div>
                </div>
                    }
                }

            </div>
        </div>
        <div class="rightsidebar span_3_of_1">
            <h2>Danh mục sản phẩm</h2>
            <ul class="side-w3ls">
                <div id="menu">
                    <ul>
                        @{ Html.RenderAction("ListCategory", "Product");}
                    </ul>
                </div>
            </ul>
            <div class="subscribe">
                <h2>Newsletters Signup</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod.......</p>
                <div class="signup">
                    <form>
                        <input type="text" value="E-mail address" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'E-mail address';"><input type="submit" value="Sign up">
                    </form>
                </div>
            </div>
            <div class="community-poll">
                <h2>Community POll</h2>
                <p>What is the main reason for you to purchase products online?</p>
                <div class="poll">
                    <form>
                        <ul>
                            <li>
                                <input type="radio" name="vote" class="radio" value="1">
                                <span class="label"><label>More convenient shipping and delivery </label></span>
                            </li>
                            <li>
                                <input type="radio" name="vote" class="radio" value="2">
                                <span class="label"><label for="vote_2">Lower price</label></span>
                            </li>
                            <li>
                                <input type="radio" name="vote" class="radio" value="3">
                                <span class="label"><label for="vote_3">Bigger choice</label></span>
                            </li>
                            <li>
                                <input type="radio" name="vote" class="radio" value="5">
                                <span class="label"><label for="vote_5">Payments security </label></span>
                            </li>
                            <li>
                                <input type="radio" name="vote" class="radio" value="6">
                                <span class="label"><label for="vote_6">30-day Money Back Guarantee </label></span>
                            </li>
                            <li>
                                <input type="radio" name="vote" class="radio" value="7">
                                <span class="label"><label for="vote_7">Other.</label></span>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#horizontalTab').easyResponsiveTabs({
            type: 'default', //Types: default, vertical, accordion
            width: 'auto', //auto or any width like 600px
            fit: true   // 100% fit in a container
        });
    });
</script>
<script>
    $(function () {
        $('#products').slides({
            preload: true,
            preloadImage: 'img/loading.gif',
            effect: 'slide, fade',
            crossfade: true,
            slideSpeed: 350,
            fadeSpeed: 500,
            generateNextPrev: true,
            generatePagination: false
        });
    });
</script>